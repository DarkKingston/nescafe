{
    "name": "lightnest/ln_ciamlite",
    "description": "Configure and add require configuration on gigya.",
    "type": "drupal-module",
    "keywords": [
        "Gigya",
		"CIAM Extension"
    ],
    "repositories": {
        "gigya": {
            "type": "package",
            "package": {
                "version": "dev-master",
                "name": "package/gigya",
                "type": "drupal-module",
                "source": {
                    "url": "https://github.com/gigya/drupal8.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    },
    "require": {
        "drupal/core": "^8 || ^9",
        "gigya/gigya-drupal": "dev-master",
        "drupal/paragraphs": "^1.12",
        "drupal/ds": "^3.13"
    },
    "extra":{
        "enable-patching": true

    }
}
